@{
}
@model IEnumerable<Device>
<h2>
    </h2>
    <div >
        @foreach (var item in Model)
    {
        <p>@item.Name</p>
        <a class="btn btn-outline-light" asp-route-id="@item.Id" asp-controller="Devices" asp-action="DeviceDetails" type="button">Details</a>
        <a class="btn btn-outline-danger" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Devices"
        onclick="return confirm('are you sure you Want To Delete @item.Name')">Delete</a>
        <a class="btn btn-outline-info" asp-route-id="@item.Id" asp-action="Edit" type="button">Edit</a>

    }
    <a class="btn btn-outline-info" asp-action="Create" type="button">Create</a>

    </div>